<article id="<%= dom_id(comment) %>" class="comment <%= 'system-comment' if comment.auto_generated? %> bg-gray-300 p-4 rounded-lg shadow-md">
  <p class="email">
    <%= comment.creator.email %>
  </p>
  <time datetime="<%= comment.created_at.iso8601 %>" class="time">
    <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
  </time>

  <p>
    <%= comment.body %>
  </p>
</article>