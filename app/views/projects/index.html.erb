<% content_for :title, "Projects" %>

<!-- Notice Message -->
<% if notice %>
  <p class="text-green-600 bg-green-100 p-3 rounded-md mb-6">
    <%= notice %>
  </p>
<% end %>

<!-- Page Title -->
<h1 class="text-3xl font-semibold text-gray-900 mb-6">Projects</h1>

<!-- Projects List -->
<div id="projects" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @projects.each do |project| %>
    <div class="bg-white p-6 shadow-md rounded-lg">
      <%= render project %>
      <div class="mt-4 text-center">
        <%= link_to "Show this project", project, class: "text-blue-500 hover:text-blue-700" %>
      </div>
    </div>
  <% end %>
</div>